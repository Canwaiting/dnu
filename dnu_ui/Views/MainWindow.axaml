<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:dnu_ui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:dnu_ui.Views"
        mc:Ignorable="d"
        Width="600"
        Height="450"
        x:Class="dnu_ui.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="dnu_ui">
	<TabControl  TabStripPlacement="Left">
		<!-- 第一个Tab -->
		<TabItem Header="下载单个视频">
			<Grid
				RowDefinitions="Auto,Auto"
				>
				<StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
					<TextBox Name="InputText" Width="200" Margin="5" Watermark="输入文本" />
					<Button Click="ClickHandler" Content="下载" Width="100" Margin="5" />
				</StackPanel>

				<Border Grid.Row="1" Background="#FFFFFF"
				BorderBrush="#F5F7F8"
				BorderThickness="2"
				CornerRadius="3"
				Width="300"
				Height="300"
				>
				<TextBlock  Name="OutputText" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>
				</Border> 
			</Grid>
		</TabItem>

		<!-- 第二个Tab -->
		<TabItem Header="订阅频道">
			<TextBlock>内容2</TextBlock>
		</TabItem>

		<!-- 第三个Tab -->
		<TabItem Header="检测更新">
			<TextBlock>内容3</TextBlock>
		</TabItem>
	</TabControl>


</Window>
